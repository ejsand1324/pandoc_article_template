@article{curryComparisonMotorVehicle2021,
  title = {Comparison of {{Motor Vehicle Crashes}}, {{Traffic Violations}}, and {{License Suspensions Between Autistic}} and {{Non-Autistic Adolescent}} and {{Young Adult Drivers}}.},
  author = {Curry, Allison E. and Metzger, Kristina B. and Carey, Meghan E. and Sartin, Emma B. and Huang, Patty and Yerys, Benjamin E.},
