@article{cheeDrivingBehaviourProfile2017,
  title = {Driving {{Behaviour Profile}} of {{Drivers}} with {{Autism Spectrum Disorder}} ({{ASD}}).},
  author = {Chee, Derserri Y and Lee, Hoe C and Patomella, Ann-Helen and Falkmer, Torbj{\"o}rn},
