@article{patrickExecutiveFunctionDrives2020,
  title = {Executive Function "Drives" Differences in Simulated Driving Performance between Young Adults with and without Autism Spectrum Disorder.},
  author = {Patrick, Kristina E and Schultheis, Maria T and Agate, F Taylor and McCurdy, Mark D and Daly, Brian P and Tarazi, Reem A and Chute, Douglas L and Hurewitz, Felicia},
  year = {2020},
  month = jul,
  journal = {Child neuropsychology : a journal on normal and abnormal development in childhood and adolescence},
