@article{dodwellEffectsSecondaryTasks2020,
  title = {The Effects of Secondary Tasks That Involve Listening and Speaking on Young Adult Drivers with Traits Associated with Autism Spectrum Disorders: {{A}} Pilot Study with Driving Simulation},
  author = {Dodwell, Alison and Trick, Lana M.},
  year = {2020},
